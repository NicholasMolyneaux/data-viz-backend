# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                           controllers.UploadController.index

->      /api                        routers.SummaryDataRouter


+ nocsrf
POST    /upload                     controllers.UploadController.upload

+ nocsrf
POST    /uploadInfrastructure       controllers.UploadController.uploadInfrastructure

GET     /db/infrastructures         controllers.ReadInfrastructureInfoController.getInfraList
GET     /db/deleteinfra/:infra      controllers.ReadInfrastructureInfoController.deleteInfra(infra: String)

GET     /infra/walls/:name          controllers.ReadInfrastructureDataController.getWallCollection(name: String)
GET     /infra/zones/:name          controllers.ReadInfrastructureDataController.getZoneCollection(name: String)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
